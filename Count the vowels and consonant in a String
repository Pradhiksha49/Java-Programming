public class Main {
    public static void main(String[] args) {
        String a="hello world";
        int v=0,con=0;
       a= a.toLowerCase();
       for(int i=0;i<=a.length()-1;i++) {
           char ch = a.charAt(i);
           if (ch == 'a' || ch =='e' || ch =='i' || ch =='o' || ch == 'u') {
               v++;}
           else{
               con++;} }
        System.out.println("vowels:"+v);
        System.out.println("consonant:"+con);

    }
}
