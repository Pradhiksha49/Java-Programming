//Find the 15th term of the series?
0,0,7,6,14,12,21,18, 28//

import java .util.*;
public class Main{
    public static void main(String[] args) {
        Scanner d=new Scanner(System.in);
        int n=d.nextInt();
        System.out.println(nthterm(n));

    }
    public static int nthterm(int n){
        if(n%2==1){
            return 7*((n-1)/2);
        }
        else{
            return 6*((n/2)-1);
        }
    }
}
